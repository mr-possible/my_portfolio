---
interface Props {
  pubDate: Date;
  tags?: string[];
}

const { pubDate, tags = [] } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<div class="flex flex-wrap items-center gap-3 text-sm text-[var(--text-secondary)]">
  <time datetime={pubDate.toISOString()}>{formattedDate}</time>
  {
    tags.length > 0 && (
      <>
        <span>Â·</span>
        <div class="flex flex-wrap gap-2">
          {tags.map((tag) => (
            <a
              href={`/blog/tag/${tag}`}
              class="text-xs px-2 py-0.5 rounded-full bg-[var(--bg-secondary)] hover:text-[var(--accent)] transition-colors"
            >
              {tag}
            </a>
          ))}
        </div>
      </>
    )
  }
</div>
